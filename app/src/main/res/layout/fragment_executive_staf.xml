<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Executive_Staf">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_staff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="Staff"
            app:titleTextColor="@color/purple_700" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar_staff">


            <LinearLayout
                android:id="@+id/base_layout_id"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_margin="2dp"
                android:orientation="horizontal"
                android:weightSum="5">


                <LinearLayout
                    android:gravity="center"
                    android:id="@+id/img_name_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2dp"
                    android:layout_weight="2"
                    android:background="#B8B8B8"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/staff_img_id"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:src="@drawable/dob_icon" />

                    <TextView
                        android:id="@+id/staff_id_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="Staff ID :201711047007"
                        android:textSize="13sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_weight="3"
                    android:background="#FA8888"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/staff_name_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Md Mahfuzur Rahman"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/staffDes_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="Designation"
                        android:textColor="#121425"
                        android:textSize="18sp" />


                    <TextView
                        android:id="@+id/staff_email_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="Email"
                        android:textColor="#06082E"
                        android:textSize="18sp" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="cursive"
                android:text="Executive Staff"
                android:textSize="50sp" />


        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>